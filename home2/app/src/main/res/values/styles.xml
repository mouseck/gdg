<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RedTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>
    <style name="GrayTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>
    <style name="BlackTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="GreyTextDay">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="BlackTextDay">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">70dp</item>
    </style>
    <style name="GrayTextLittle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>
    <style name="BlackTextLittle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">90dp</item>
    </style>
</resources>